/dts-v1/;
#include "sun8i-t113.dtsi"
#include <dt-bindings/gpio/gpio.h>

/ {
	model = "MangoPi MQ-Dual";
	compatible = "allwinner,sun8i-v3s";

	aliases {
        mmc0 = &mmc0;
        serial0 = &uart0;
	};

	chosen {
        stdout-path = "serial0:115200n8";
	};

    backlight: backlight {
        compatible = "pwm-backlight";
        pwms = <&pwm 0 50000 0>;
        brightness-levels = <0 2 4 8 16 32 64 128 255>;
        default-brightness-level = <8>;
    };

    panel-rgb@0 {
        compatible = "simple-panel";
        backlight = <&backlight>;

        display-timings {
            timing@0 {
                clock-frequency = <33000000>;
                hactive = <800>;
                vactive = <480>;
                hfront-porch = <40>;
                hback-porch = <87>;
                hsync-len = <1>;
                vfront-porch = <13>;
                vback-porch = <31>;
                vsync-len = <1>;
                hsync-active = <0>;
                vsync-active = <0>;
                de-active = <1>;
                pixelclk-active = <1>;
                bits-per-pixel = <18>;
            };
        };
    };
};

&uart0 {
	pinctrl-0 = <&uart0_pe_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&spi0  {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins>, <&spi0_cs0_pin>;

	flash@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "jedec,spi-nor";
		reg = <0>;
		spi-max-frequency = <40000000>;
	};
};

&mmc0 {
	bus-width = <4>;
	// cd-gpios = <&pio 5 6 (GPIO_ACTIVE_LOW)>;
	pinctrl-0 = <&mmc0_pins>;
	pinctrl-names = "default";
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	// usb0_vbus-supply = <&reg_usbvbus>;
	// usb1_vbus-supply = <&reg_usbvbus>;
	status = "okay";
};

&pwm {
    status = "okay";
};

&ehci1 {
    status = "disable";
};

&ohci1 {
    status = "disable";
};
